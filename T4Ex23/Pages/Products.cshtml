@page
@model T4Ex23.Pages.ProductsModel
@{
    ViewData["Title"] = "Productes";
}

<div class="container">
    <h2 class="mb-4">Gestió de Productes</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Afegir nou producte</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="NewProduct.Name" class="form-label">Nom del producte</label>
                            <input asp-for="NewProduct.Name" class="form-control" />
                            <span asp-validation-for="NewProduct.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="NewProduct.Price" class="form-label">Preu (€)</label>
                            <input asp-for="NewProduct.Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="NewProduct.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="mb-3">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary d-block w-100">Afegir</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Llistat de productes</h5>
        </div>
        <div class="card-body">
            @if (Model.Products.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Preu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Name</td>
                                <td>@product.Price.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No hi ha productes afegits encara.</p>
            }
        </div>
    </div>
</div>